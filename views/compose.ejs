<%- include('partials/header'); -%>
<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="form-group">
    <label>Name:</label>
    <input type="text" class="form-control" placeholder="Your Name" name="userName" />
    </div>
    <div class="form-group">
      <label>Your Text:</label>
      <textarea class="form-control" rows="3" type="text" name="addPost" value="Your text here..."></textarea>
      </div>
      <button type="submit" class="btn btn-primary mb-2" name="button">Add</button>
</form>
